<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.davidvu.hello_world"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/helloworldicon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.davidvu.hello_world.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.davidvu.hello_world.NewPlanetActivity"
            android:label="@string/title_activity_new_planet" >
        </activity>
        <activity
            android:name="com.davidvu.hello_world.ConfigActivity"
            android:label="@string/title_activity_config" >
        </activity>
        <activity
            android:name="com.davidvu.hello_world.TravelPlanetActivity"
            android:label="@string/title_activity_travel_planet" >
        </activity>
        <activity
                android:name="com.davidvu.hello_world.AttackPlanetActivity"
                android:label="@string/title_activity_attack_planet" >
        </activity>
    </application>

</manifest>
