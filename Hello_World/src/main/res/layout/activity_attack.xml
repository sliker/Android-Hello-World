<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="@drawable/stars">



    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="70dp"
        android:layout_height="match_parent" >

        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bombButton"
                android:contentDescription="@string/content_desc_bomb"
                android:src="@drawable/bomb"
                android:background="#00000000" android:layout_margin="9dp"
                android:soundEffectsEnabled="true" />
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/invadeButton"
                android:contentDescription="@string/content_desc_invade"
                android:src="@drawable/attack_invade" android:background="#00000000" android:layout_margin="9dp"
                android:soundEffectsEnabled="true"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/infectButton"
                android:contentDescription="@string/content_desc_virus"
                android:src="@drawable/infect" android:background="#00000000" android:layout_margin="9dp"
                android:soundEffectsEnabled="true"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/laserButton"
                android:contentDescription="@string/content_desc_laser"
                android:src="@drawable/laser" android:background="#ffffffff" android:layout_margin="9dp"
                android:soundEffectsEnabled="true"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/exitButton"
                android:contentDescription="@string/content_desc_exit"
                android:src="@drawable/exit" android:background="#00000000" android:layout_margin="9dp"
                android:soundEffectsEnabled="true"/>

    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >

        <TextView android:textColor="#ffffff" android:textSize="18sp" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text="@string/attack_planet_caption" android:layout_marginLeft="8dp" />

        <TextView android:textColor="#FFFFBB" android:textSize="25dp" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginTop="18dp" android:text="@string/attack_planet_bomb"
            android:layout_marginLeft="8dp"/>
        <TextView android:textColor="#FFFFBB" android:textSize="25dp" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginTop="18dp" android:text="@string/attack_planet_invade"
            android:layout_marginLeft="8dp"/>
        <TextView android:textColor="#FFFFBB" android:textSize="25dp" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginTop="18dp" android:text="@string/attack_planet_infect"
            android:layout_marginLeft="8dp"/>
        <TextView android:textColor="#FFFFBB" android:textSize="25dp" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginTop="18dp" android:text="@string/attack_planet_laser"
            android:layout_marginLeft="8dp"/>
        <TextView android:textColor="#FFFFBB" android:textSize="25dp" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginTop="18dp" android:text="@string/attack_planet_exit"
            android:layout_marginLeft="8dp"/>

    </LinearLayout>
    
</LinearLayout>